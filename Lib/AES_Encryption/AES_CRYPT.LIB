/*** Beginheader AEScalcRounds */
// takes Nb and Nk, returns number of rounds to use
int AEScalcRounds(int nb, int nk);
/*** EndHeader */

nodebug int AEScalcRounds(int nb, int nk)
{
	if(nb == 4 && nk == 4)
	{
		return 10;
	}
	else if(nb == 8 || nk == 8)
	{
		return 14;
	}
	else
	{
		return 12;
	}
}



