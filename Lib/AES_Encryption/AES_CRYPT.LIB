/*** Beginheader AESsubBytes */
//assume count < 256
root void AESsubBytes(char *table, char *bytes, int count);
/*** EndHeader */

#asm root

AESsubBytes::
	AES_S(aes_s_sbox)
	 ex	 de, hl 		 ; 2 DE = table base
	 ld	 hl, (sp+6)	; 9
	 ld	 b, L			; 2  B holds byte count
	 ld	 hl, (sp+4) ; 9 Data to transform
subloop:
	 ld	a,(hl)
	 ex	de',hl
	 bool	hl
	 ld	l,a
	 add	hl,de
	 ld	a,(hl)
	 ex	de',hl
	 ld	(hl),a
	 inc	hl
	 djnz	 subloop		; 33*16 + 22 + 8 = 558 clocks
	 ret

#endasm

