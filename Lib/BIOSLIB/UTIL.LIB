root void long_0();
/*** endheader */
#asm nodebug
; test 32 bit bc-de == zero. z flag set and hl set 0 or 1 (for == zero)
long_0::
	ld 	a,b
	or 	c
	or 	d
	or 	e
	ret
#endasm

