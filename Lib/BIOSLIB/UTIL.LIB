#asm nodebug
; E.0    : Return C Logical Equivalent of HL
;
; INPUT  :
;          HL = 16 Bit Value
; OUTPUT :
;          HL = 0, if HL == 0
;          HL = 1, if HL != 0

e_0::    ; ****improve - equivalent of bool, should never be used?
	ld 	a,h
	or 	l
	ret   z
	ld 	hl,1
	ret

