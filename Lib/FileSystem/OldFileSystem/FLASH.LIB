nodebug
int flash_writesector(FlashDescriptor* fd, word sector, 
	unsigned long buffer)
{
	if(fd->byte_writable)
		flash_erasesector(fd,sector);
		
	return fd->flash_write(fd,sector,buffer,fd->sector_size);
}
