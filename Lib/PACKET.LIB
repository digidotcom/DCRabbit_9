cpkt_isr_enableport::
    ld	 a,(PCFRShadow)
    or	 CDRIVE_TXMASK              ; enable serial port C transmitter
    ld	 (PCFRShadow),a
;ioi ld	 (PCFR),a
	IOWRITE_A(PCFR)
	 call  pktCtx			;user defined asm routine
	 ld	 a, 0x01
	 ld	 (cpkt_portenabled), a
	 ret

