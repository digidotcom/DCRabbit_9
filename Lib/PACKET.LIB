dpkt_nextdone::
	 ipset 1
	 ld	 hl, (dpkt_rxnext)
	 ld	 de, (dpkt_rxcurrent)
	 or	 a
	 sbc	 hl, de
	 jr	 nz, .done
	 call	 dpkt_finish			;complete current packet
.done:
	 ipres
	 ret

#endasm

