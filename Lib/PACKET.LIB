	 ld	 a, c
;ioi ld	 (SDDR), a
	IOWRITE_A(SDDR)
	 jr	 .sendexit
.send9low:
	 ld	 a, c
;ioi ld	 (SDAR), a
	IOWRITE_A(SDAR)
	 jr	 .sendexit
