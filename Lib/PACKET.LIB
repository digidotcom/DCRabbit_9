.isr_rxload:
	 call	 cpkt_recvbyte
	 jr	 .isr_rxdone

.isr_rxstart:
	 call cpkt_finish
	 call	cpkt_recvbyte
.isr_rxdone:
	 ipres
	 pop	 hl
	 pop	 de
	 pop	 bc
	 pop	 af
	 ret

#endasm

