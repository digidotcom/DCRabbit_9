	 cp	 b
	 jr	 z, .isr_rxstart
.isr_rxnotstart:
	 ld	 hl, (fpkt_rxpos)
	 bool	 hl
	 jr	 z, .isr_rxdone		;keep waiting for a start byte
.isr_rxload:
	 call	 fpkt_recvbyte
	 jr	 .isr_rxdone

.isr_rxstart:
	 call fpkt_finish
	 call	 fpkt_recvbyte
.isr_rxdone:
	 ipres
	 pop	 hl
	 pop	 de
	 pop	 bc
	 pop	 af
	 ret

#endasm

