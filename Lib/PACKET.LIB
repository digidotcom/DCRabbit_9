	 ld	 a, (apkt_waitforgap)
	 or	 a
	 jr	 nz, .isr_rxresetgap		;waiting for a gap
	 call	 apkt_recvbyte
.isr_rxresetgap:
	 ld	 a, (apkt_rxgapsize)
	 ld	 (apkt_rxgapcount), a	;reset the gap counter
;ioi ld	 (SADR), a					;send dummy byte for gap timing
	IOWRITE_A(SADR)
.isr_rxdone:
	 ipres
	 pop	 hl
	 pop	 de
	 pop	 bc
	 pop	 af
	 ret

#endasm

