	 ld	 a, (apkt_txactive)
	 or	 a
	 jr	 nz, .isr_rxdone		;transmitter is active
	 ;do overrun check
	 bit	 5, c
	 jr	 z, .isr_rxcheckparity
	 ld	 a, 0x01
	 ld	 (apkt_rxoverrun), a
.isr_rxcheckparity:
	 ld	 a, (apkt_parity)
	 or	 a
	 jr	 z, .isr_rxcontinue		;next step
	 call  apkt_paritytest

