cpkt_nextdone::
	 ipset 1
	 ld	 hl, (cpkt_rxnext)
	 ld	 de, (cpkt_rxcurrent)
	 or	 a
	 sbc	 hl, de
	 jr	 nz, .done
	 call	 cpkt_finish			;complete current packet
.done:
	 ipres
	 ret

#endasm

