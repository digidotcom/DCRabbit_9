{
	printf("sf_device address: 0x%x\n", (unsigned int)dev );
   printf("\tnext: 0x%x\n", (unsigned int)(dev->next) );
   printf("\tpages: %ld\n", dev->pages);
   printf("\tpagesize: %d\n", dev->pagesize);
