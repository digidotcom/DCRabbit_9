/*** BeginHeader usDelay */

void usDelay();

/*** EndHeader */
#asm nodebug
usDelay::
#if (_BOARD_TYPE_ == SR9100)			; need min 4.7 microsecond
	ld		c,12								; 25MHz cpu boards
#else
	ld		c,10								; 22Mhz cpu boards
#endif
.usdelay1:						; delay to latch
	dec	c
	jr		nz,.usdelay1
	ret
#endasm

