_stack_debug
void _gen_lin2seg(long* laddr, char norm) {
	auto int old_ix;
#asm
	ld	(sp+@sp+old_ix),ix

    	ld hl, (sp+@sp+norm)
      ld c, l
      ld	ix, (sp+@sp+laddr)
      ld	hl, (ix+2)
      ld	a, l
      ld	hl, (ix)
		_GEN_LIN2SEG(c)
      ld	ix, (sp+@sp+laddr)
      ld (ix), l
		ld (ix+1), h
      ld (ix+2), a
	ld	ix,(sp+@sp+old_ix)
#endasm
}


