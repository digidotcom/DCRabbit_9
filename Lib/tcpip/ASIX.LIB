asix_internal_func
int asix_havelink(_ASIXConfig * nic)
{
#asm
		push	ix

		ld		hl,(sp+@SP+nic+2)
		asix_internal_call(ne2k_load_io_pointers)

ioe	ld		a,(iy+ASIX_GPI)
		and	a,0x01
		bool	hl
		ld		L,a

		pop	ix
#endasm
}

