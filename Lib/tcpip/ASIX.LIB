	#xcodorg	pld_eth_xcode		resume
#endif

asix_internal_func void asix_prt_readreg(_ASIXConfig* nic, char* buf)
{
#asm _pktdrv_debug xmemok
	push	ix
	push	iy

	ld		hl,(sp+@SP+nic+4)
	asix_internal_call(ne2k_load_io_pointers)

ioe	ld		a,(iy)
		push	af

		ld		hl,(sp+@sp+buf+6)
      ex		de,hl

ioe	ld		(ix),0x20
ioe	ld		(ix+PD_RMTBCNT0),0x00			; clear remote byte count register
ioe	ld		(ix+PD_RMTBCNT1),0x00			; clear remote byte count register

		ld		b,31
		ld		hl, iy
_pd_loop1:
ioe	ld		a,(hl)
		ld		(de),a
		inc	hl
		inc	de
		djnz	_pd_loop1

		inc	de				; ignore reset...

ioe	ld		(ix),0x60
		ld		b,31
		ld		hl,iy
_pd_loop2:
ioe	ld		a,(hl)
		ld		(de),a
		inc	hl
		inc	de
		djnz	_pd_loop2

		pop	af
      ld		hl,(sp+@sp+buf+4)
		ld		(hl),a

; switch back to page 0
ioe	ld		(ix),0x20

		pop	iy
		pop	ix
#endasm
}

