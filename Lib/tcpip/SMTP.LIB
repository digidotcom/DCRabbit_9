_system int _rs_smtp_setserver(char* server);
/*** EndHeader */

smtp_debug
_system int _rs_smtp_setserver(char* server)
{
	_SYS_CALL_VARS
	if (strlen(server) < SMTP_MAX_SERVERLEN) {
		strcpy(smtp_state.server, server);
		smtp_state.server_ip = 0;
		return SMTP_OK;
	} else {
		return SMTP_NAMETOOLONG;
	}
}

