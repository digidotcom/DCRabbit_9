         add   sp,2
         ld		(sp+@sp+retval),hl
			jp		.smsc_ioctl_return

.smsc_ioctl_power:
   ;case PD_POWER:
   ;	if (*(int *)stack)
   ;   	return smsc_powerup(nic);
   ;   else
   ;		return smsc_powerdown(nic);
			ld		hl,(sp+@sp+stack)
         ld		hl,(hl)
         bool	hl
         ld    hl,(sp+@sp+nic)
         push  hl
         jr		z,.smsc_ioctl_powerdown
         smsc_internal_call(smsc_powerup)
         jr		.smsc_ioctl_powerdone
.smsc_ioctl_powerdown:
			smsc_internal_call(smsc_powerdown)
.smsc_ioctl_powerdone:
         add   sp,2
         ld		(sp+@sp+retval),hl
			jp		.smsc_ioctl_return

.smsc_ioctl_sethwa:
   ;case PD_SETHWA:
   ;	smsc_sethwaddr(nic, *(char **)stack);
      	ld		hl,(sp+@sp+stack)
         ld		hl,(hl)
         push	hl
         ld		hl,(sp+@sp+nic+2)
         push	hl
         smsc_internal_call(smsc_sethwaddr)
         add	sp,4
         bool	hl
         ld		l,h
         ld		(sp+@sp+retval),hl
			jp		.smsc_ioctl_return

.smsc_ioctl_gethwa:
