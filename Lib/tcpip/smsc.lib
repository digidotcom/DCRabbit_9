#if PLD_ETH_COMPILING == 1
		ld		(hl),a
#else
		ld		(PDDDRShadow),a
#endif
ioi	ld		(PDDDR),a

		ld		hl,1000							; wait 1000ms
#if PLD_ETH_COMPILING == 1
		PLD_IMPORT_CALL(res_block, PLD_ETH_TICKWAIT, 0)
#else
      call	tickwait
#endif

#if PLD_ETH_COMPILING == 1
	   ld		hl,(ix+PLD_ETH_PDDRSHADOW_OFS)
		ld		a,(hl)                     ; set PD0 as output
#else
		ld		a,(PDDRShadow)
#endif
		and	a,0xfe
#if PLD_ETH_COMPILING == 1
		ld		(hl),a
#else
		ld		(PDDRShadow),a
#endif
ioi	ld		(PDDR),a
#endasm
}

