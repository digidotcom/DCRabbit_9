		#define DHCP_CLIENT_ID_MAC
		#define IFCONFIG_ETH0 \
				IFS_DHCP, 1, \
				IFS_UP

	#endif

	#if TCPCONFIG == 4
		/*
		 * Config 4: Static configuration of both ethernet and PPP over serial port C.
