int glkClearVKP ()
{
	int loop;
	glBuffLock();
	glBlankScreen();
	memcpy (asKey,KeyStore,sizeof(Key) * 9);
	glXPutBitmap(0,0,320,240,GlkXrefresh);
	GlkEnable = 0;
	glBuffUnlock();
	return 1;

}


